{% extends 'base.html.twig' %}

{% block title %}Facture n°
{{ facture.id }}
{% endblock %}

{% block links %}

<li class="breadcrumb-item">
    <a href="{{ path('facture_index') }}">
        <i class="mdi mdi-account-group"></i>
        Facturation</a>
</li>
<li class="breadcrumb-item active" aria-current="page">
    <i class="icon-user"></i>facture n°
    {{ facture.id }}
</li>

{% endblock %}

{% block body %}

<div class="card bg-white">
    <div class="card-header bg-primary">
        <h4 class="font-size-18 text-light">Facture n°{{ facture.id }}</h4>
    </div>
    <div class="card-body">
        <table class="table">
            <tbody>
                <tr>
                    <th>Statut</th>
                    <td>
                        <span class="badge badge-pill bg-{{ facture.statut  ? 'success' : 'warning' }}">{{
                            facture.statut ? '<i class="mdi mdi-email-alert-outline"></i> Envoyer' : 'En attente'
                            }}
                        </span>
                    </td>
                </tr>
                <tr>
                    <th></th>
                    <td>
                        {% include "factures/_send_client_mail.html.twig" %}
                    </td>
                </tr>
            </tbody>
        </table>

        {% include "commande/_facture.html.twig" %}

        <div class="py-4">
            <a href="{{ path('facture_index') }}" class="btn btn-primary">Factures</a>

        {{ include('factures/_delete_form.html.twig') }}
        </div>

    </div>
</div>

{% endblock %}