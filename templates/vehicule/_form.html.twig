{{ form_start(form) }}
<div class="card">
    <div class="card-header bg-primary">
        <legend class="font-size-18 py-2 text-light">Vehicule
            {% if app.request.attributes.get('_route') == 'vehicule_edit' %}
                {{ vehicule.name }}
            {% endif %}
        </legend>
    </div>
    <div class="card-body py-5">

        <div class="row">
            <div class="col-sm-8 offset-sm-1">

                {{ form_row(form.name) }}

                {{ form_row(form.reference) }}

                <div class="row">
                    <div class="col-sm-6">
                        {{ form_row(form.imageFile) }}
                    </div>
                </div>

                {{ form_rest(form) }}

                <button class="btn btn-primary my-3">{{ button_label|default('Enregistrer') }}</button>

                {% if app.request.attributes.get('_route') == 'vehicule_edit' %}
                    {{ include('vehicule/_delete_form.html.twig') }}
                {% endif %}

            </div>
        </div>

    </div>
</div>
{{ form_end(form) }}