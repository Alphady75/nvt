{{ form_start(form) }}

<div class="card">
    <div class="card-header bg-primary py-2">
        <legend class="font-size-18 text-light">Secteur de travail
            {% if app.request.attributes.get('_route') == 'secteur_edit' %}
                {{ secteur.name }}
            {% endif %}
        </legend>
    </div>
    <div class="card-body py-5">
        <div class="row">
            <div class="col-sm-8 offset-sm-1">

                {{ form_rest(form) }}

                <div>
                    <button class="btn btn-primary">{{ button_label|default('Enregistrer') }}</button>
                    {% if app.request.attributes.get('_route') == 'secteur_edit' %}
                        {{ include('secteur/_delete_form.html.twig') }}
                    {% endif %}
                </div>

            </div>
        </div>
    </div>
</div>

{{ form_end(form) }}