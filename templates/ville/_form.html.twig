{{ form_start(form) }}

<div class="card">
	<div class="card-header bg-primary">
		<legend class="font-size-18 py-2 text-light">Informations de la ville
			{% if app.request.attributes.get('_route') == 'ville_edit' %}
				de
				{{ ville.name }}
			{% else %}
				utilisateur
			{% endif %}
		</legend>
	</div>
	<div class="card-body py-5">


		<div class="row">
			<div class="col-sm-8 offset-sm-1">

				{{ form_row(form.name) }}

				<div class="row">
					<div class="col-sm-6">
						{{ form_row(form.longitude) }}
					</div>
					<div class="col-sm-6">
						{{ form_row(form.latitude) }}
					</div>
				</div>

				{% if app.request.attributes.get('_route') == 'ville_edit' %}
					<div class="my-2">
						<iframe src="https://maps.google.com/maps?&q={{ ville.name }}&output=embed" width="100%" height="300" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
					</div>
				{% endif %}

				{{ form_rest(form) }}

				<div class="py-4">
					<button class="btn btn-primary">{{ button_label|default('Enregistrer') }}</button>

					{% if app.request.attributes.get('_route') == 'ville_edit' %}

						{{ include('ville/_delete_form.html.twig') }}

					{% endif %}
				</div>

			</div>
		</div>

	</div>
</div>
{{ form_end(form) }}
