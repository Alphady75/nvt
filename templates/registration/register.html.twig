{% extends 'auth.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
<div class="auth-full-page-content p-md-5 p-4">
    <div class="login-screen">
        <div class="login-body">
            <div class="mb-4 mb-md-5">
                <a href="index.html" class="d-block auth-logo">
                    <img src="{{ asset('admin/theme/assets/images/logo-dark.png') }}" alt="" height="18" class="auth-logo-dark">
                    <img src="{{ asset('admin/theme/assets/images/logo-light.png') }}" alt="" height="18" class="auth-logo-light">
                </a>
            </div>
            <div class="my-auto">

                <div>
                    <h5 class="text-primary font-weight-bold">Inscription</h5>
                    <p class="text-muted">Créer votre compte {{ appName }} avant de continuer.</p>
                </div>

                <div class="mt-4">
                    {{ form_start(registrationForm) }}
                    {{ form_row(registrationForm.email) }}
                    {{ form_row(registrationForm.plainPassword, {
                        label: 'Mot de passe'
                    }) }}
                    {{ form_row(registrationForm.agreeTerms) }}

                    <div class="mt-3 d-grid">
                        <button class="btn btn-primary waves-effect waves-light" type="submit">Inscription</button>
                    </div>
                    
                    {{ form_end(registrationForm) }}
                    <div class="mt-5 text-center">
                        <p>Vous avez déjà un compte ? <a href="{{ path('app_login') }}" class="fw-medium text-primary"> Connectez-vous avec votre compte </a> </p>
                    </div>
                </div>
            </div>

            <div class="text-center">
                <p class="mb-0">© <script>document.write(new Date().getFullYear())</script> {{ appName }}. Dévélopper avec amour par <i class="mdi mdi-heart text-danger"></i> {{ appConcepteur }}</p>
            </div>
        </div>


    </div>
</div>
{% endblock %}
