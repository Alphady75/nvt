{{ form_start(form) }}

<div class="card">
    <div class="card-header bg-primary">
        <h4 class="font-size-18 py-2 text-light">
            Conducteur
            {% if app.request.attributes.get('_route') == 'conducteur_edit' %}
                :
                {{ conducteur.nom ~ ' ' ~ conducteur.prenom }}
            {% endif %}
        </h4>
    </div>
	<div class="card-body py-5">
		<div class="row">
			<div class="col-sm-9 offset-sm-1">

				<div class="row my-3">
					<div class="col-sm-4">
						<div class="h-100">

							{% if app.request.attributes.get('_route') == 'conducteur_edit' %}

								{% if conducteur.imageName %}

									{% else %}
										{% if conducteur.civilite == 'Mr' %}
											<img src="{{ asset('img/user.png') }}" class="img-fluid" alt="">
										{% else %}
											<img src="{{ asset('img/femmel.png') }}" class="img-fluid" alt="">
										{% endif %}
								{% endif %}

							{% else %}

								<img src="{{ asset('img/user.jpg') }}" class="img-fluid" alt="">

							{% endif %}

							{{ form_row(form.imageFile) }}

						</div>
					</div>
					<div class="col-sm-8 pt-3">
						{{ form_row(form.civilite) }}
						{{ form_row(form.statut) }}
						{{ form_row(form.code) }}
						{{ form_row(form.nom) }}
						<div class="row">
							<div class="col-sm-6">
								{{ form_row(form.prenom) }}
							</div>
							<div class="col-sm-6">
								{{ form_row(form.prenom2) }}
							</div>
						</div>
						<div class="row">
							<div class="col-sm-4">
								{{ form_row(form.datenaissance) }}
							</div>
							<div class="col-sm-4">
								{{ form_row(form.villenaissance) }}
							</div>
							<div class="col-sm-4">
								{{ form_row(form.nationalite) }}
							</div>
						</div>

					</div>
				</div>
				<div class="row">
					<div class="col-sm-3">
						{{ form_row(form.domicile) }}
					</div>
					<div class="col-sm-3">
						{{ form_row(form.adresse) }}
					</div>

					<div class="col-sm-3">
						{{ form_row(form.telephone) }}
					</div>
					<div class="col-sm-3">
						{{ form_row(form.telpersonnel) }}
					</div>
				</div>
				<div class="row">
					<div class="col-sm-6">
						{{ form_row(form.email) }}
					</div>
					<div class="col-sm-6">
						{{ form_row(form.emailPerso) }}
					</div>
				</div>

				<div class="row">
					<div class="col-sm-4">
						{{ form_row(form.poste) }}
					</div>
					<div class="col-sm-4">
						{{ form_row(form.service) }}
					</div>
					<div class="col-sm-4">
						{{ form_row(form.entreprise) }}
					</div>
				</div>

				<div class="row">
					<div class="col-sm-3">
						{{ form_row(form.dateDebutEnciennete) }}
					</div>
					<div class="col-sm-3">
						{{ form_row(form.dateEntre) }}
					</div>

					<div class="col-sm-3">
						{{ form_row(form.typeContrat) }}
					</div>
					<div class="col-sm-3">
						{{ form_row(form.dateFinContrat) }}
					</div>
				</div>

				<div class="row">
					<div class="col-sm-12">
						{{ form_row(form.chauffeur) }}
						
						{{ form_row(form.memo) }}
					</div>
				</div>

				<div class="row">

					<div class="col-sm-3">
						{{ form_row(form.typePermis) }}
					</div>
					<div class="col-sm-3">
						{{ form_row(form.numPermis) }}
					</div>
					<div class="col-sm-6">
						{{ form_row(form.villePermis) }}
					</div>
				</div>

				<div class="row">
					<div class="col-sm-3">
						{{ form_row(form.societe) }}
					</div>
					<div class="col-sm-3">
						{{ form_row(form.appartenance) }}
					</div>
					<div class="col-sm-6">
						{{ form_row(form.contactsUrgence) }}
					</div>
				</div>

				<div class="row">
					<div class="col-sm-3">
						{{ form_row(form.numcartetachy) }}
					</div>
					<div class="col-sm-3">
						{{ form_row(form.numCarteVital) }}
					</div>
					<div class="col-sm-6">
						{{ form_row(form.emeteurPasseport) }}
					</div>
				</div>

				<div class="row">
					<div class="col-sm-3">
						{{ form_row(form.taille) }}
					</div>
					<div class="col-sm-3">
						{{ form_row(form.pointure) }}
					</div>
				</div>

				{{ form_rest(form) }}

				<div class="pt-4">
					<button class="btn btn-primary">{{ button_label|default('Enregistrer') }}</button>


					{% if app.request.attributes.get('_route') == 'conducteur_edit' %}
						{{ include('conducteur/_delete_form.html.twig') }}
					{% endif %}
				</div>

			</div>
		</div>

	</div>
</div>

{{ form_end(form) }}
