{% extends 'base.html.twig' %}

{% block title %}Vos accès{% endblock %}

{% block links %}

<li class="breadcrumb-item">
   <a href="{{ path('users_index') }}">
      <i class="mdi mdi-account-supervisor-circle-outline"></i>
      Comptes utilisateurs</a>
</li>
<li class="breadcrumb-item active" aria-current="page">
   Vos accès <strong>{{ user.nom ~ " " ~ user.prenom }}</strong>
</li>

{% endblock %}

{% block body %}

<div class="card border">
   <div class="card-header bg-primary">
      <h4 class="font-size-18 py-2 text-light">
         Vos accès
         {{ user.nom }}
         {{ user.prenom }}
      </h4>
   </div>
   <div class="card-body py-5">
      <div class="row">
         <div class="col-md-4">
            <div class="">

               {{ include('users/_photo_compte.html.twig') }}

            </div>
         </div>
         <div class="col-md-3">
            <div class="p-2">
               <p class="text-muted my-0">Nom(s)*</p>
               <strong>{{ user.nom ?? '' }}</strong>
            </div>

            <div class="p-2">
               <p class="text-muted my-0">Prénom(s)*</p>
               <strong>{{ user.prenom ?? '' }}</strong>
            </div>

            <div class="p-2">
               <p class="text-muted my-0">Civilité/Genre*</p>
               {{ user.genre ?? '' }}
            </div>

         </div>
         <div class="col-sm-5">
            <div class="p-2">
               {{ form_start(resetForm) }}

               <legend class="font-size-18 pb-3">Mettre à jour mes accès</legend>

               <div class="password">
                  {{ form_row(resetForm.plainPassword) }}
               </div>
               <button class="btn btn-primary"><i class="fa fa-key"></i> Mettre à jour</button>
               {{ form_end(resetForm) }}
            </div>
         </div>
      </div>

      <div class="row">
         <div class="col-md-9">

            <div class="p-2 mt-4">
               <strong class="my-0">À propos</strong>
               <p class="my-0 text-muted">{{ user.apropos ?? 'Aucun contenu...' }}</p>
            </div>

            <div class="p-2">
               <p class="text-muted my-0">Adresse e-mail*</p>
               <strong>{{ user.email ?? '' }}</strong>
            </div>

            <div class="row">

               <div class="col-md-6">
                  <div class="p-2">
                     <p class="text-muted my-0">Rôles*</p>
                     {{ include('users/_roles.html.twig') }}
                  </div>
               </div>

            </div>

         </div>

      </div>

   </div>
</div>

{% endblock %}